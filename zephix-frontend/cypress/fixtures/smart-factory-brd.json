      "dataTypes": [
        "Machine performance metrics (speed, output, efficiency)",
        "Quality measurements (dimensions, weight, defects)",
        "Environmental conditions",
        "Material flow and inventory levels"
      ],
      "frequency": "Real-time streaming with 1-second intervals for critical metrics"
    },
    "analytics": {
      "predictiveMaintenance": [
        "Anomaly detection for equipment behavior",
        "Remaining useful life (RUL) predictions",
        "Maintenance scheduling optimization",
        "Spare parts inventory forecasting"
      ],
      "qualityAnalytics": [
        "Real-time defect detection using computer vision",
        "Root cause analysis for quality issues",
        "Statistical process control (SPC) charts",
        "Predictive quality modeling"
      ],
      "productionOptimization": [
        "Production scheduling optimization",
        "Energy consumption optimization",
        "Bottleneck identification and resolution",
        "What-if scenario analysis"
      ]
    },
    "visualization": {
      "dashboards": [
        "Executive dashboard with KPI overview",
        "Plant manager operational dashboard",
        "Maintenance team equipment health monitor",
        "Quality control real-time inspection viewer"
      ],
      "alerts": [
