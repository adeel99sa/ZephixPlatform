{
  "name": "zephix-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:analyze": "tsc && vite build && echo 'Bundle analysis available at reports/frontend/bundle-stats.html'",
    "start": "serve -s dist -l ${PORT:-8080}",
    "preview": "vite preview --host 0.0.0.0 --port $PORT",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "lint:new": "eslint 'src/components/ui/button/**/*.{ts,tsx}' 'src/components/ui/input/**/*.{ts,tsx}' 'src/components/ui/card/**/*.{ts,tsx}' 'src/components/ui/feedback/**/*.{ts,tsx}' 'src/components/ui/layout/**/*.{ts,tsx}' 'src/lib/api/**/*.{ts,tsx}' 'src/lib/providers/**/*.{ts,tsx}' 'src/stores/authStore.ts' 'src/stores/uiStore.ts' 'src/pages/projects/ProjectsPage.tsx' 'src/pages/dashboard/DashboardPage.tsx'",
    "lint:legacy": "eslint 'src/**/*.{ts,tsx}' --ignore-pattern 'src/components/ui/**' --ignore-pattern 'src/lib/api/**' --ignore-pattern 'src/lib/providers/**' --ignore-pattern 'src/stores/**' --ignore-pattern 'src/pages/projects/ProjectsPage.tsx' --ignore-pattern 'src/pages/dashboard/DashboardPage.tsx'",
    "type-check": "tsc -p tsconfig.app.json --noEmit",
    "typecheck": "tsc -p tsconfig.app.json --noEmit",
    "validate": "npm run type-check && npm run lint",
    "build:test": "./scripts/build-and-test.sh",
    "prebuild": "rm -rf dist/*",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage --reporter=dot --coverage.reporter=text-summary --exclude 'src/components/landing/**'",
    "test:foundation": "vitest run 'src/components/ui/**/*.test.*' 'src/lib/api/**/*.test.*' 'src/pages/projects/**/*.test.*' 'src/pages/dashboard/**/*.test.*' 'src/pages/settings/**/*.test.*' 'src/pages/templates/**/*.test.*'",
    "test:legacy": "vitest run --ignore 'src/components/ui/**/*.test.*' --ignore 'src/lib/api/**/*.test.*' --ignore 'src/pages/projects/**/*.test.*' --ignore 'src/pages/dashboard/**/*.test.*'",
    "size:ci": "size-limit || (echo 'Size limit failed'; exit 1)",
    "lh:ci": "lighthouse http://localhost:4173 --preset=desktop --only-categories=accessibility,performance,best-practices,seo --output json --output-path reports/frontend/lh-report.json",
    "debt:snapshot": "node scripts/debt-snapshot.mjs",
    "debt:compare": "node scripts/debt-compare.mjs",
    "dead-code:check": "npx ts-prune --error && npx knip --changed",
    "dead-code:report": "npx ts-prune && npx knip",
    "security:audit": "npm audit --production && npx license-checker --production --failOn 'GPL;AGPL;LGPL;MPL;EPL;CPOL;CDDL;EUPL;OSL;QPL;Sleepycat;WTFPL'",
    "security:check": "npm audit --production || true",
    "license:check": "npx license-checker --production --onlyAllow 'MIT;BSD;Apache-2.0;ISC;Unlicense;0BSD'",
    "lint:diff": "node scripts/lint-diff.mjs",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:headed": "cypress run --headed",
    "test:e2e": "start-server-and-test dev http://localhost:5173 cypress:run",
    "test:e2e:headed": "start-server-and-test dev http://localhost:5173 cypress:run:headed",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "storybook:ci": "storybook build --quiet",
    "dev:local": "vite --host 0.0.0.0 --port 5173",
    "prepare": "husky"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.7",
    "@hello-pangea/dnd": "^18.0.1",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-accordion": "^1.2.12",
    "@sentry/react": "^10.2.0",
    "@sentry/tracing": "^7.120.4",
    "@tanstack/react-query": "^5.90.5",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@types/uuid": "^10.0.0",
    "axios": "^1.11.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "dayjs": "^1.11.18",
    "framer-motion": "^12.23.12",
    "gantt-task-react": "^0.3.9",
    "jwt-decode": "^4.0.0",
    "lottie-react": "^2.4.1",
    "lucide-react": "^0.536.0",
    "posthog-js": "^1.261.0",
    "react": "^18.3.1",
    "react-confetti": "^6.4.0",
    "react-countup": "^6.5.3",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "react-error-boundary": "^6.0.0",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.5.2",
    "react-intersection-observer": "^9.16.0",
    "react-router-dom": "^7.8.0",
    "recharts": "^3.1.2",
    "serve": "^14.2.1",
    "socket.io-client": "^4.8.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0",
    "zod": "^4.1.2",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@chromatic-com/storybook": "^4.1.0",
    "@cypress/vite-dev-server": "^6.0.3",
    "@eslint/js": "^9.30.1",
    "@size-limit/file": "11.2.0",
    "@storybook/addon-a11y": "9.1.7",
    "@storybook/addon-docs": "9.1.7",
    "@storybook/addon-onboarding": "9.1.7",
    "@storybook/react-vite": "9.1.7",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "2.1.9",
    "autoprefixer": "^10.4.21",
    "cypress": "^14.5.3",
    "danger": "^12.3.2",
    "eslint": "^9.30.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "9.1.7",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest-axe": "^10.0.0",
    "jsdom": "^25.0.1",
    "lighthouse": "^12.0.0",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "size-limit": "11.2.0",
    "start-server-and-test": "2.1.1",
    "storybook": "9.1.7",
    "tailwindcss": "3.4.17",
    "typescript": "5.8.3",
    "typescript-eslint": "8.35.1",
    "vite": "7.1.6",
    "vitest": "2.1.9"
  },
  "size-limit": [
    {
      "name": "main bundle",
      "path": "dist/assets/*.js",
      "limit": "700 KB"
    }
  ]
}
