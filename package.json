{
  "name": "@zephix/platform",
  "version": "1.0.0",
  "description": "Enterprise-grade Zephix SaaS platform backend",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "dev": "concurrently \"npm run dev --workspaces\"",
    "security:audit": "npm audit --audit-level moderate",
    "security:deps": "npm run security:deps --workspaces",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "typecheck": "npm run typecheck --workspaces",
    "clean": "npm run clean --workspaces",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "migrate": "npm run migrate --workspace=nestjs-auth-service && npm run migrate --workspace=@zephix/user-auth-service",
    "seed": "npm run seed --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zephix/platform.git"
  },
  "keywords": [
    "enterprise",
    "saas",
    "microservices",
    "typescript",
    "nodejs"
  ],
  "author": "Zephix Team",
  "license": "MIT"
} 