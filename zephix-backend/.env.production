# Zephix Backend Production Environment Configuration
# Copy this file to .env and update with your actual values

# === DATABASE CONFIGURATION ===
# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:InKXRm04ynzliL0OV96f37isU@yamanote.proxy.rlwy.net:24845/railway

# === EMAIL CONFIGURATION ===
# MUST be "production" to send actual emails
NODE_ENV=production

# Email sender information
EMAIL_FROM_ADDRESS=noreply@getzephix.com

# Gmail SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your.email@gmail.com
SMTP_PASS=your16charapppass  # App password from https://myaccount.google.com/apppasswords

# === APPLICATION URLS ===
# Frontend URL for email links (verification, password reset, etc.)
FRONTEND_URL=https://getzephix.com

# Backend API URL
API_URL=https://your-backend-domain.com

# === AUTHENTICATION ===
# JWT secret key (generate a secure random string)
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# === SECURITY ===
# CORS configuration
CORS_ORIGINS=https://getzephix.com,https://www.getzephix.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX=5

# === OPTIONAL INTEGRATIONS ===
# OpenAI (for AI features)
OPENAI_API_KEY=sk-...

# Jira Integration
JIRA_BASE_URL=
JIRA_USERNAME=
JIRA_API_TOKEN=

# GitHub Integration
GITHUB_BASE_URL=https://api.github.com
GITHUB_TOKEN=

# Webhook URLs
TEAMS_WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# === MONITORING ===
# Logging
LOG_LEVEL=info

# OpenTelemetry
OTEL_ENABLED=true
OTEL_SERVICE_NAME=zephix-backend
METRICS_ENABLED=true
METRICS_PATH=/api/metrics

# === DEPLOYMENT SPECIFIC ===
# Railway specific
RAILWAY_ENVIRONMENT=production
PORT=3000  # Railway will override this

# Health check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
