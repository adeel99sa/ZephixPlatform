# ==============================================
# ZEPHIX BACKEND - PRODUCTION ENVIRONMENT
# ==============================================

# Application Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (Railway auto-populated)
DATABASE_URL=${{Postgres.DATABASE_URL}}

# Database Migration Settings
RUN_MIGRATIONS_ON_BOOT=true
DB_LOGGING=false

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-here-change-this
JWT_EXPIRES_IN=7d

# AI Services Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4000
ANTHROPIC_DATA_RETENTION_OPT_OUT=true
ANTHROPIC_ENABLE_DATA_COLLECTION=false

# LLM Provider Settings
LLM_PROVIDER=anthropic
LLM_ENFORCE_NO_DATA_RETENTION=true
LLM_LOG_PROVIDER_SETTINGS=true
LLM_VALIDATE_ON_STARTUP=true

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://getzephix.com,https://www.getzephix.com

# Security Configuration
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=60
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX=5

# Email Configuration
EMAIL_FROM_ADDRESS=noreply@getzephix.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Application URLs
FRONTEND_URL=https://getzephix.com
API_URL=https://zephix-backend-production.up.railway.app

# Observability Configuration
LOG_LEVEL=info
OTEL_ENABLED=true
OTEL_SERVICE_NAME=zephix-backend
METRICS_ENABLED=true
METRICS_PATH=/api/metrics

# Status Reporting Integrations (Optional)
JIRA_BASE_URL=
JIRA_USERNAME=
JIRA_API_TOKEN=

GITHUB_BASE_URL=https://api.github.com
GITHUB_TOKEN=

TEAMS_WEBHOOK_URL=
SLACK_WEBHOOK_URL=

FINANCIAL_API_KEY=
FINANCIAL_BASE_URL=

# Export Services (Optional)
PDF_SERVICE_URL=
PPTX_SERVICE_URL=
EXCEL_SERVICE_URL=

# Alert Configuration
EMAIL_SERVICE_URL=
DEFAULT_REPORT_FORMAT=detailed
MAX_REPORT_SIZE=10485760
REPORT_RETENTION_DAYS=365

# Build Metadata (Auto-generated)
npm_package_version=1.0.0
