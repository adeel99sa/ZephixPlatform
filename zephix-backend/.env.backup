# Zephix Backend Environment Configuration
# Copy this file to .env and fill in your values
#
# PRODUCTION REQUIREMENTS (Railway):
# - DATABASE_URL: Automatically set by Railway
# - JWT_SECRET: Must be a strong, unique secret
# - NODE_ENV: Automatically set to 'production'
# - All other variables: Railway sets production-appropriate values
#
# LOCAL DEVELOPMENT:
# - Copy this file to .env
# - Fill in your local database credentials
# - Set NODE_ENV=development

# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME=Zephix Backend
APP_VERSION=1.0.0

# Database Configuration
# PRODUCTION: Railway automatically sets DATABASE_URL
# LOCAL: Use individual DB_* variables below
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zephix_development
DB_USERNAME=zephix_user
DB_PASSWORD=zephix_dev_password_1755409904

# JWT Configuration
# PRODUCTION: Must be set to a strong, unique secret
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AI Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@zephix.com
SMTP_SECURE=false

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://getzephix.com
CORS_CREDENTIALS=true

# Security Configuration
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Database Settings
DB_LOGGING=false
DB_SYNCHRONIZE=false

# Feature Flags
FEATURE_AI_CHAT_ENABLED=true
FEATURE_DOCUMENT_PROCESSING_ENABLED=true
DB_DATABASE=zephix_auth_db
