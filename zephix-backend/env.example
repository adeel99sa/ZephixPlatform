# =============================================================================
# Zephix Backend Environment Configuration
# =============================================================================

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Connection (for Railway deployment)
DATABASE_URL=postgresql://user:password@localhost:5432/zephix_dev

# Local Development Database (if not using DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=zephix_dev

# =============================================================================
# REDIS CONFIGURATION (for BullMQ queues)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# AI/LLM SERVICES CONFIGURATION
# =============================================================================
# Anthropic Claude (existing)
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_API_VERSION=2023-06-01
ANTHROPIC_DATA_RETENTION_OPT_OUT=true
ANTHROPIC_ENABLE_DATA_COLLECTION=false

# OpenAI (for embeddings)
OPENAI_API_KEY=your-openai-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_BASE_URL=https://api.openai.com/v1

# =============================================================================
# VECTOR DATABASE CONFIGURATION (Pinecone)
# =============================================================================
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=zephix-documents

# =============================================================================
# SECURITY & CORS
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
HELMET_ENABLED=false
RATE_LIMIT_ENABLED=false

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
RUN_MIGRATIONS_ON_BOOT=false
LOG_LEVEL=debug
LLM_VALIDATE_ON_STARTUP=true
LLM_LOG_PROVIDER_SETTINGS=true

# =============================================================================
# OBSERVABILITY
# =============================================================================
# OpenTelemetry (optional)
OTEL_ENABLED=false
OTEL_ENDPOINT=http://localhost:4317

# =============================================================================
# FILE UPLOAD LIMITS
# =============================================================================
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=.docx,.pdf

# =============================================================================
# QUEUE CONFIGURATION
# =============================================================================
DOCUMENT_PROCESSING_CONCURRENCY=2
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=2000

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and set these for production deployment
# NODE_ENV=production
# HELMET_ENABLED=true
# RATE_LIMIT_ENABLED=true
# LOG_LEVEL=info
# LLM_VALIDATE_ON_STARTUP=false
# LLM_LOG_PROVIDER_SETTINGS=false
