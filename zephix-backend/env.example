# Zephix Backend Environment Configuration
# Copy this file to .env and fill in your values

# Application Configuration
NODE_ENV=production
PORT=3000
APP_NAME=Zephix Backend
APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/zephix_production
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=zephix_production
DATABASE_USERNAME=username
DATABASE_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=zephix-embeddings

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@zephix.com
SMTP_SECURE=false

# Sentry Configuration
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# OpenTelemetry Configuration
OTEL_ENDPOINT=http://localhost:14268/api/traces
OTEL_SERVICE_NAME=zephix-backend
OTEL_SERVICE_VERSION=1.0.0

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# Security Configuration
CORS_ORIGIN=https://zephix-frontend-production.up.railway.app
CORS_CREDENTIALS=true
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# Migration Safety Configuration
MIGRATION_BACKUP_ENABLED=true
MIGRATION_VALIDATION_ENABLED=true
MIGRATION_ROLLBACK_ENABLED=true
MIGRATION_MAX_TIME=300
MIGRATION_BACKUP_RETENTION_DAYS=7

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=3000
HEALTH_CHECK_START_PERIOD=5000
HEALTH_CHECK_RETRIES=3

# Performance Configuration
MAX_CONNECTIONS=100
IDLE_TIMEOUT=30000
CONNECTION_TIMEOUT=10000

# Feature Flags
FEATURE_AI_CHAT_ENABLED=true
FEATURE_DOCUMENT_PROCESSING_ENABLED=true
FEATURE_COLLABORATION_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Development Overrides (set to false in production)
DEBUG_ENABLED=false
SWAGGER_ENABLED=false
CORS_DEBUG=false
