{
   "name": "zephix-backend",
   "version": "1.0.0",
   "description": "Zephix Backend - AI-Powered Project Management Platform",
   "author": "Zephix Team",
   "private": true,
   "license": "UNLICENSED",
   "scripts": {
      "build": "nest build --config tsconfig.build.json && npm run build:migrations && node -e \"require('fs').writeFileSync('dist/main.js', \\\"require('./src/main');\\\\n\\\")\" && npm run check:railway",
      "build:migrations": "rm -rf dist/migrations && tsc -p tsconfig.migrations.json",
      "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
      "start": "nest start",
      "dev:killport": "node -e \"(async()=>{try{const {execSync}=require('child_process');execSync('lsof -ti :3000 | xargs kill -9',{stdio:'ignore'})}catch(e){}})()\"",
      "start:dev": "npm run dev:killport && nest start --watch",
      "start:debug": "nest start --debug --watch",
      "start:prod": "node dist/main.js",
      "start:railway": "node dist/main.js",
      "db:migrate": "node node_modules/typeorm/cli.js migration:run -d dist/src/config/data-source-migrate.js",
      "db:show": "node dist/src/scripts/db/show.js",
      "db:verify": "node dist/src/scripts/db/verify.js",
      "lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
      "lint:changed": "bash scripts/lint-changed.sh",
      "test": "jest",
      "test:gating": "jest --config jest.gating.config.js --passWithNoTests --forceExit",
      "test:unit": "jest --testPathIgnorePatterns=\"e2e|integration\" --passWithNoTests",
      "test:watch": "jest --watch",
      "test:cov": "jest --coverage",
      "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
      "test:e2e": "node -e \"if(!process.env.DATABASE_URL || process.env.NODE_ENV !== 'test'){console.log('skipped, no DATABASE_URL');process.exit(0)}\" && bash scripts/setup-test-db.sh && npm run migration:run && jest --config ./test/jest-e2e.json",
      "test:e2e:auth": "jest --config ./test/jest-e2e.json --testPathPattern=\"auth-signup|invites\"",
      "test:rbac": "jest --testPathPattern=\"(platform-roles|workspace-access|require-org-role|workspace-members)\" --passWithNoTests",
      "test:contracts": "jest --testPathPattern=\"(admin|billing|templates|workspaces).*controller\\.spec\" --testPathIgnorePatterns=\"workflow\" --passWithNoTests",
      "test:smoke": "jest --testPathPattern=\"smoke-boot\" --testPathIgnorePatterns=\"node_modules|dist\" --passWithNoTests",
      "guard:deploy": "bash scripts/guard-deploy.sh",
      "lint:tenancy-guard": "bash ../scripts/check-tenancy-bypass.sh",
      "lint:tenancy-guard-full": "bash ../scripts/check-tenancy-bypass-full.sh",
      "lint:mutual-imports": "bash ../scripts/check-mutual-imports.sh",
      "lint:controller-prefixes": "bash scripts/check-controller-prefixes.sh",
      "typecheck:tests": "tsc -p tsconfig.spec.json --noEmit",
      "prepush": "tsc --noEmit -p tsconfig.build.json && npm run build:migrations && node -e \"const fs=require('fs');const files=fs.existsSync('dist/migrations')?fs.readdirSync('dist/migrations'):[];const ok=files.some(f=>f.includes('17980202500000')||f.toLowerCase().includes('userorganizationssnakecasecolumns'));if(!ok){console.error('missing migration in dist/migrations');process.exit(1);}console.log('migration present');\"",
      "typecheck:tests:ci": "npm run typecheck:tests || echo '⚠️  Test typecheck has errors - fix before merging'",
      "ensure:demo": "ts-node -T scripts/ensure-demo-users.ts",
      "migrate": "ts-node scripts/migrate.ts",
      "migrate:add-last-login": "ts-node scripts/run-migration.ts",
      "typeorm": "typeorm-ts-node-commonjs",
      "migration:generate": "npm run typeorm migration:generate -- InitialProductionSchema -d src/config/data-source.ts",
      "migration:run": "npm run typeorm migration:run -- -d src/config/data-source.ts",
      "migration:create": "npm run typeorm migration:create",
      "migration:revert": "npm run typeorm migration:revert -- -d src/config/data-source.ts",
      "migration:show": "npm run typeorm migration:show -- -d src/config/data-source.ts",
      "migration:run:test": "bash scripts/load-test-env.sh npm run typeorm migration:run -- -d src/config/data-source.ts",
      "test:integration": "bash scripts/load-test-env.sh jest --testPathPattern=\"integration\\.spec\\.ts$\"",
      "test:integration:bulk": "bash scripts/load-test-env.sh jest work-items-bulk.integration.spec.ts",
      "test:integration:my-work": "bash scripts/load-test-env.sh jest my-work.integration.spec.ts",
      "test:integration:rollups": "bash scripts/load-test-env.sh jest rollups-phase6-closeout.integration.spec.ts",
      "test:integration:template-center": "bash scripts/load-test-env.sh jest --config test/jest-integration.json --runInBand",
      "test:integration:rls": "jest --config test/jest-integration.json test/integration/rls-tenant-isolation.integration.spec.ts test/integration/rls-contract-empty-rows.integration.spec.ts --runInBand",
      "test:integration:tenancy-stress": "jest --config test/jest-e2e.json --testPathPattern=tenancy-pool-stress --runInBand --forceExit",
      "proof:enterprise": "bash scripts/proof-enterprise.sh",
      "demo:bootstrap": "node dist/src/scripts/demo/bootstrap.js",
      "test:auth-ready": "bash scripts/validate/auth-production-ready.sh",
      "db:fingerprint": "ts-node -r tsconfig-paths/register scripts/db-fingerprint.ts",
      "db:verify-bootstrap": "ts-node -r tsconfig-paths/register scripts/verify-migration-bootstrap.ts",
      "db:verify-template-center-v1": "ts-node -r tsconfig-paths/register scripts/verify-template-center-v1.ts",
      "seed:users": "ts-node src/scripts/seed-users.ts",
      "seed:templates": "ts-node src/scripts/seed-templates.ts",
      "seed:phase2-templates": "ts-node -r tsconfig-paths/register src/scripts/seed-phase2-templates.ts",
      "setup:tester-org": "ts-node -r tsconfig-paths/register scripts/setup-tester-org.ts",
      "seed:e2e": "ts-node scripts/seed-test-user.ts",
      "verify:db": "ts-node src/scripts/verify-database.ts",
      "fix:db": "ts-node src/scripts/fix-database.ts",
      "backfill:workspace-ownership": "ts-node src/scripts/backfill-workspace-ownership.ts",
      "backfill:workspace-owners": "ts-node src/scripts/backfill-workspace-owners-and-members.ts",
      "test:admin": "node scripts/test-admin-endpoints.js",
      "smoke:admin-access": "ts-node scripts/smoke-test-admin-access.ts",
      "smoke:admin": "ts-node -r tsconfig-paths/register src/scripts/smoke-test-billing.ts",
      "smoke:templates": "ts-node -r tsconfig-paths/register src/scripts/smoke-test-templates.ts",
      "smoke:admin-endpoints": "ts-node -r tsconfig-paths/register src/scripts/smoke-test-admin.ts",
      "smoke:workspaces": "ts-node -r tsconfig-paths/register src/scripts/smoke-test-workspaces.ts",
      "smoke:projects": "ts-node -r tsconfig-paths/register src/scripts/smoke-test-projects.ts",
      "smoke:workspace-modules": "ts-node -r tsconfig-paths/register src/scripts/smoke-test-workspace-modules.ts",
      "smoke:integrations": "ts-node -r tsconfig-paths/register src/scripts/smoke-test-integrations.ts",
      "seed:starter-template": "ts-node -r tsconfig-paths/register src/scripts/seed-starter-template.ts",
      "template-center:seed:kpis": "ts-node -r tsconfig-paths/register src/scripts/template-center/seed-kpis.ts",
      "template-center:seed:docs": "ts-node -r tsconfig-paths/register src/scripts/template-center/seed-doc-templates.ts",
      "template-center:seed:templates": "ts-node -r tsconfig-paths/register src/scripts/template-center/seed-prebuilt-templates.ts",
      "seed:demo": "ts-node -r tsconfig-paths/register src/scripts/seed-demo-data.ts",
      "seed:demo:full": "DEMO_BOOTSTRAP=true npm run seed:demo && TEMPLATE_SEED=true npm run seed:starter-template",
      "dev-seed": "ts-node -r tsconfig-paths/register src/scripts/dev-seed.ts",
      "db:seed:scale": "ts-node -r tsconfig-paths/register src/scripts/scale-seed/index.ts seed",
      "db:seed:scale:cleanup": "ts-node -r tsconfig-paths/register src/scripts/scale-seed/index.ts cleanup",
      "db:seed:scale:bench": "ts-node -r tsconfig-paths/register src/scripts/scale-seed/index.ts bench",
      "db:seed:scale:ladder": "ts-node -r tsconfig-paths/register src/scripts/scale-seed/index.ts ladder",
      "backup": "ts-node scripts/backup-database.ts",
      "backup:schedule": "0 2 * * * npm run backup",
      "build:production": "NODE_ENV=production nest build",
      "validate:deployment": "bash scripts/validate-deployment.sh",
      "docker:build": "docker build -t zephix-backend .",
      "docker:run": "docker run -p 3000:3000 --env-file .env.production zephix-backend",
      "docker:test": "npm run docker:build && npm run docker:run",
      "deploy:check": "npm run validate:deployment",
      "check:railway": "node -e \"require('fs').existsSync('dist/main.js') ? process.exit(0) : (console.error('dist/main.js missing'), process.exit(1))\""
   },
   "dependencies": {
      "@anthropic-ai/sdk": "^0.62.0",
      "@aws-sdk/client-s3": "^3.989.0",
      "@aws-sdk/s3-request-presigner": "^3.989.0",
      "@nestjs-modules/mailer": "^1.9.0",
      "@nestjs/cli": "^11.0.10",
      "@nestjs/common": "^10.0.0",
      "@nestjs/config": "^3.1.1",
      "@nestjs/core": "^10.0.0",
      "@nestjs/event-emitter": "^2.0.3",
      "@nestjs/jwt": "^10.2.0",
      "@nestjs/passport": "^10.0.3",
      "@nestjs/platform-express": "^10.0.0",
      "@nestjs/schedule": "^4.1.2",
      "@nestjs/swagger": "^7.4.2",
      "@nestjs/testing": "^10.0.0",
      "@nestjs/throttler": "^5.0.0",
      "@nestjs/typeorm": "^10.0.2",
      "@opentelemetry/api": "^1.9.0",
      "@opentelemetry/instrumentation-express": "^0.37.0",
      "@opentelemetry/instrumentation-http": "^0.52.0",
      "@opentelemetry/instrumentation-nestjs-core": "^0.37.0",
      "@opentelemetry/resources": "^2.0.1",
      "@opentelemetry/sdk-node": "^0.56.0",
      "@opentelemetry/semantic-conventions": "^1.29.0",
      "@pinecone-database/pinecone": "^2.2.2",
      "@prisma/client": "^6.16.2",
      "@sendgrid/mail": "^7.7.0",
      "@types/bcrypt": "^6.0.0",
      "@types/express": "^4.17.21",
      "@types/multer": "^1.4.13",
      "argon2": "^0.31.0",
      "bcrypt": "^6.0.0",
      "bullmq": "^5.69.3",
      "class-transformer": "^0.5.1",
      "class-validator": "^0.14.2",
      "compression": "^1.7.4",
      "cookie-parser": "^1.4.7",
      "dotenv": "^16.6.1",
      "express": "^4.19.2",
      "express-rate-limit": "^7.0.0",
      "helmet": "^7.0.0",
      "ioredis": "^5.3.0",
      "joi": "^17.9.0",
      "mammoth": "^1.10.0",
      "multer": "^1.4.5-lts.1",
      "nestjs-pino": "^4.4.0",
      "nodemailer": "^6.9.0",
      "otplib": "^12.0.1",
      "passport": "^0.7.0",
      "passport-jwt": "^4.0.1",
      "passport-local": "^1.0.0",
      "pdf-parse": "^1.1.1",
      "pg": "^8.4.0",
      "pino": "^9.0.0",
      "pino-http": "^10.0.0",
      "prisma": "^6.16.2",
      "prom-client": "^15.1.3",
      "qrcode": "^1.5.3",
      "reflect-metadata": "^0.1.13",
      "rxjs": "^7.8.1",
      "slugify": "^1.6.6",
      "typeorm": "0.3.20",
      "typeorm-naming-strategies": "^4.1.0",
      "uuid": "^9.0.1"
   },
   "devDependencies": {
      "@eslint/eslintrc": "^3.2.0",
      "@eslint/js": "^9.18.0",
      "@nestjs/schematics": "^10.0.0",
      "@types/cookie-parser": "^1.4.9",
      "@types/jest": "^29.5.14",
      "@types/node": "^16.18.126",
      "@types/nodemailer": "^7.0.1",
      "@types/passport-jwt": "^4.0.1",
      "@types/passport-local": "^1.0.38",
      "@types/pg": "^8.11.0",
      "@types/supertest": "^6.0.2",
      "@types/uuid": "^10.0.0",
      "axios": "^1.13.2",
      "eslint": "^9.18.0",
      "eslint-config-prettier": "^10.0.1",
      "eslint-plugin-prettier": "^5.2.2",
      "globals": "^16.0.0",
      "jest": "^29.5.0",
      "madge": "^8.0.0",
      "pino-pretty": "^13.1.1",
      "prettier": "^3.4.2",
      "source-map-support": "^0.5.21",
      "supertest": "^7.0.0",
      "ts-jest": "^29.2.5",
      "ts-loader": "^9.5.2",
      "ts-node": "^10.9.2",
      "tsconfig-paths": "^4.2.0",
      "typescript": "^5.3.0",
      "typescript-eslint": "^8.20.0"
   },
   "jest": {
      "moduleFileExtensions": [
         "js",
         "json",
         "ts"
      ],
      "rootDir": "src",
      "testRegex": ".*\\.spec\\.ts$",
      "transform": {
         "^.+\\.(t|j)s$": [
            "ts-jest",
            {
               "tsconfig": "tsconfig.spec.json"
            }
         ]
      },
      "collectCoverageFrom": [
         "**/*.(t|j)s"
      ],
      "coverageDirectory": "../coverage",
      "testEnvironment": "node"
   },
   "engines": {
      "node": ">=18.0.0",
      "npm": ">=8.0.0"
   }
}
