# Minimal cursor rules configuration
rules:
  # Always-on enterprise guardrails
  - path: rules/enterprise-core.mdc
    type: always

  # Domain and platform specifics
  - path: rules/allocations.mdc
    type: always

  # Auto-attached by file pattern
  - path: rules/frontend.mdc
    type: autoAttached
    pattern: "**/*.{tsx,ts}"
  - path: rules/backend.mdc
    type: autoAttached
    pattern: "**/*{controller,service,repository,module,entity}.ts"
  - path: rules/tests.mdc
    type: autoAttached
    pattern: "**/*.{spec,test}.ts"

  # Agent behavior & workflow â€” summon when needed with @process
  - path: rules/process.mdc
    type: agentRequested
