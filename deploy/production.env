# Production Environment Configuration
# Copy this file and fill in the actual values

# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (RDS)
DB_HOST=your-rds-endpoint.amazonaws.com
DB_PORT=5432
DB_NAME=brd_system_prod
DB_USER=brd_admin
DB_PASSWORD=your-secure-password-here

# Redis Configuration (ElastiCache)
REDIS_HOST=your-elasticache-endpoint.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# JWT Configuration
JWT_SECRET=your-production-jwt-secret-min-32-chars
JWT_EXPIRES_IN=7d

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=brd-system-uploads

# Frontend Configuration
FRONTEND_URL=https://brd.yourdomain.com
ALLOWED_ORIGINS=https://brd.yourdomain.com,https://www.yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE=20971520
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,png,jpg,jpeg

# Email Configuration (SES)
EMAIL_FROM=noreply@yourdomain.com
EMAIL_REGION=us-east-1

# Monitoring
SENTRY_DSN=your-sentry-dsn
SEGMENT_WRITE_KEY=your-segment-write-key

# Slack Integration
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_BOT_TOKEN=your-slack-bot-token

# Security
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# SSL/TLS
FORCE_SSL=true
SSL_REDIRECT=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance
ENABLE_CLUSTERING=true
WORKER_COUNT=auto

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30